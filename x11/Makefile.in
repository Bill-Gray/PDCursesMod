	-mkdir tmp
	(cd tmp; \
	tar zxvf $(abs_basedir)/../$(PDC_DIR).tar.gz; \
	cd $(PDC_DIR)/x11; \
	dpkg-buildpackage -rfakeroot; \
	cd ..; \
	mv pdcurses_$(VERDOT)*.deb `basename pdcurses_$(VERDOT)*.deb .deb`-$(MYDISTRO).deb; \
